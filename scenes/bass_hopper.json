{
    "name": "bass_hopper",
    "description": "Cycles through multiple lights based on bass frequencies, creating a hopping effect",
    "key_command": "h",
    "midi": 72,
    "orchestrator": {
        "type": "hopper",
        "config": {
            "target_lights": ["rockville1", "rockville2"],
            "trigger": {
                "mfft_range": [0, 15],
                "threshold": 2.0
            },
            "transition": {
                "duration": 0.2
            }
        }
    },
    "lights": [
        {
            "name": "rockville1",
            "type": "rockville864",
            "modulator": "mfft",
            "panel_mfft_range": [0, 20],  
            "effect": {
                "name": "rockville_splatter",
                "panel_mfft_range": [0, 15],
                "panel_threshold": 2.0,
                "panel_colors": ["green", "purple", "black"],
                "panel_strobe": 255,
                "bar_mfft_range": [115, 127],
                "bar_threshold": 0.05,
                "bar_strobe": 0,
                "bar_colors": [0, 255],  
                "affect_panel": true,
                "affect_bar": true,
                "bar_mode": 0
            }
        },
        {
            "name": "rockville2",
            "type": "rockville864",
            "modulator": "mfft",
            "panel_mfft_range": [0, 20],  
            "effect": {
                "name": "rockville_splatter",
                "panel_mfft_range": [0, 15],
                "panel_threshold": 2.0,
                "panel_colors": ["green", "purple", "black"],
                "panel_strobe": 255,
                "bar_mfft_range": [115, 127],
                "bar_threshold": 0.05,
                "bar_strobe": 0,
                "bar_colors": [0, 255],  
                "affect_panel": true,
                "affect_bar": true,
                "bar_mode": 0
                }
        }
    ]
}
