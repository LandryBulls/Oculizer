{
    "name": "bass_hopper",
    "description": "Cycles through multiple lights based on bass frequencies, creating a hopping effect",
    "key_command": "h",
    "midi": 72,
    "orchestrator": {
        "type": "hopper",
        "config": {
            "target_lights": ["rockville1", "rockville2"],
            "trigger": {
                "mfft_range": [0, 15],
                "threshold": 2.0
            },
            "transition": {
                "duration": 0.2
            }
        }
    },
    "lights": [
        {
            "name": "rockville1",
            "type": "rockville864",
            "modulator": "mfft",
            "panel_mfft_range": [0, 20],
            "effect": {
                "name": "rockville_panel_fade",
                "panel_mfft_range": [0, 20],
                "panel_threshold": 2.0,
                "colors": ["red", "blue", "green"],
                "coverage": 0.5,
                "combo_mode": "mix",
                "color_order": "next",
                "fade_duration": 0.5,
                "wait": false,
                "min_brightness": 0,
                "max_brightness": 255,
                "panel_strobe": 200,
                "affect_bar": true,
                "bar_mfft_range": [115, 127],
                "bar_threshold": 0.03,
                "bar_mode": 0,
                "bar_strobe": 0,
                "bar_colors": [255],
                "mode_speed": 255
            }
        },
        {
            "name": "rockville2",
            "type": "rockville864",
            "modulator": "mfft",
            "panel_mfft_range": [0, 20],
            "effect": {
                "name": "rockville_panel_fade",
                "panel_mfft_range": [0, 20],
                "panel_threshold": 2.0,
                "colors": "trip",
                "coverage": 0.5,
                "combo_mode": "mix",
                "color_order": "next",
                "fade_duration": 0.5,
                "wait": false,
                "min_brightness": 0,
                "max_brightness": 255,
                "panel_strobe": 200,
                "affect_bar": true,
                "bar_mfft_range": [115, 127],
                "bar_threshold": 0.03,
                "bar_mode": 0,
                "bar_strobe": 0,
                "bar_colors": [255],
                "mode_speed": 255
            }
        }
    ]
}
